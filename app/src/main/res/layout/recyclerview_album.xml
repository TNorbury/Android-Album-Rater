<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/albumView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/albumBackground"
    android:orientation="vertical"
    android:layout_marginBottom="6dp">

    <ImageView
        android:id="@+id/AlbumRating"
        android:layout_width="107dp"
        android:layout_height="37dp"
        android:layout_column="1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_row="0"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@drawable/ic_thumbs_up_down_black_24dp" />

    <LinearLayout
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:orientation="vertical"
        android:layout_marginLeft="2dp">

        <TextView
            android:id="@+id/AlbumTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/album_title_placeholder"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@color/albumLabel" />

        <TextView
            android:id="@+id/AlbumArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/album_artist_placeholder"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textColor="@color/albumLabel" />

    </LinearLayout>

    <TextView
        android:id="@+id/AlbumReviewDate"
        android:layout_width="97dp"
        android:layout_height="match_parent"
        android:layout_column="3"
        android:layout_marginRight="2dp"
        android:layout_row="0"
        android:text="@string/album_date_placeholder"
        android:textAlignment="textEnd"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textColor="@color/albumLabel"
        android:textSize="12sp"
        android:textStyle="italic" />

</GridLayout>