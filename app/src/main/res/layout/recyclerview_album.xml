<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/albumView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/albumBackground"
    android:orientation="vertical"
    android:layout_marginBottom="6dp">

    <ImageView
        android:id="@+id/AlbumRating"
        android:layout_width="177dp"
        android:layout_height="54dp"
        android:layout_column="1"
        android:layout_row="0"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        app:srcCompat="@drawable/ic_thumbs_up_down_black_24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/AlbumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Album Title"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@color/albumLabel"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AlbumArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@color/albumLabel" />

    </LinearLayout>

    <TextView
        android:id="@+id/AlbumReviewDate"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_column="3"
        android:layout_row="0"
        android:text="6-20-2018"
        android:textAlignment="textEnd"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textColor="@color/albumLabel"
        android:textSize="12sp"
        android:textStyle="italic" />

</GridLayout>